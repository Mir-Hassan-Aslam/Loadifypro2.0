{
    "manifest_version": 3,
    "name": "LoadifyPro Integration",
    "version": "1.0",
    "description": "Sends download links from your browser to the LoadifyPro application.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "http://localhost:8080/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content_script.js"],
            "run_at": "document_end"
        }
    ]
}